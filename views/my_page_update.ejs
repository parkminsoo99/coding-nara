    <!-- Masthead-->
    <header class="masthead_mypage">
      <div class="container px-4 px-lg-5 h-100">
        <div
          class="row gx-4 gx-lg-5 h-100 align-items-center justify-content-center text-center"
        >
          <div class="col-lg-8 align-self-end">
            <h1 class="text-white font-weight-bold">개인정보수정</h1>
            <hr class="divider" />
          </div>
          <div class="col-lg-8 align-self-baseline">
            <p class="text-white-75 mb-5">
              개인 정보를 변경하기 위해 아래 폼을 작성하세요.
            </p>
          </div>
        </div>
      </div>
    </header>
    <br />
    <br />
    <div class="row gx-4 gx-lg-5 justify-content-center mb-5">
      <div class="col-lg-6">
        <form id="contactForm" action="/myinfo/update_mypage" method="post">
          <!-- Name input-->
          <div class="form-floating mb-3">
            <input
              class="form-control"
              id="name"
              name="username"
              type="text"
              placeholder="Enter your name..."
              data-sb-validations="required"
              value="<%-Nickname%>"
            />
            <label for="name">이름<span class="text-danger"> *</span></label>
          </div>
          <!-- Phone number input-->
          <div class="form-floating mb-3">
            <input
              class="form-control"
              id="phone"
              name="number"
              type="tel"
              oninput="autoHyphen2(this)"
              maxlength="13"
              placeholder="010-1234-5678"
              data-sb-validations="required"
              value="<%=Mobile%>"
            />
            <label for="phone"
              >전화번호<span class="text-danger"> *</span></label
            >
          </div>
          <!-- address input-->
          <div class="row g-2">
            <div class="col-md-3">
              <div class="form-floating">
                <input
                  class="form-control"
                  id="member_post"
                  name="member_post"
                  type="text"
                  placeholder="Zip Code"
                  required
                  readonly
                  onclick="findAddr()"
                />
                <label for="phone"
                  >우편번호<span class="text-danger"> *</span></label
                >
                <div class="invalid-feedback" data-sb-feedback="phone:required">
                  The Address is required.
                </div>
              </div>
            </div>
            <div class="col-md">
              <div class="form-floating">
                <input
                  class="form-control"
                  id="member_addr"
                  name="member_addr"
                  type="text"
                  placeholder="Address"
                  required
                  readonly
                  onclick="findAddr()"
                />
                <label for="phone"
                  >주소<span class="text-danger"> *</span></label
                >
                <div class="invalid-feedback" data-sb-feedback="phone:required">
                  The Address is required.
                </div>
              </div>
            </div>
          </div>
          <div class="form-floating mb-1"></div>
          <div class="form-floating mb-3">
            <input
              class="form-control"
              id="member_leftover"
              name="member_leftover"
              type="text"
              placeholder="Detailed Address"
            />
            <label for="phone">나머지 주소</label>
          </div>
          <div class="d-none" id="submitSuccessMessage">
            <div class="text-center mb-3">
              <div class="fw-bolder">Form submission successful!</div>
              To activate this form, sign up at
              <br />
              <a href="https://startbootstrap.com/solution/contact-forms"
                >https://startbootstrap.com/solution/contact-forms</a
              >
            </div>
          </div>
          <div class="d-none" id="submitErrorMessage">
            <div class="text-center text-danger mb-3">
              Error sending message!
            </div>
          </div>
          <!-- Submit Button-->
          <div class="d-grid">
            <button
              class="btn btn-primary btn-xl"
              id="submitButton"
              type="submit"
            >
              제출
            </button>
          </div>
        </form>
      </div>
    </div>
